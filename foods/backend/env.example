# ===========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root123456
DB_NAME=foods_db
# Pool de conexões (padrão: 75, recomendado para muitos acessos simultâneos)
DB_CONNECTION_LIMIT=75

# ===========================================
# CONFIGURAÇÕES DO SERVIDOR
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA E PERFORMANCE
# ===========================================
# Rate limiting - máximo de requisições por IP a cada 15 minutos (padrão: 1000)
RATE_LIMIT_MAX=1000

# Redis - para rate limiting distribuído (recomendado em produção)
REDIS_URL=redis://redis:6379
# Para desabilitar Redis (usar rate limiting em memória apenas): REDIS_ENABLED=false
REDIS_ENABLED=true

# ===========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# ===========================================
JWT_SECRET=seu_jwt_secret_aqui
JWT_EXPIRES_IN=24h

# SSO - Secret compartilhado entre Foods e Cotação
SSO_SECRET=sso_shared_secret_2024_terceirizemais

# ===========================================
# CONFIGURAÇÕES DO OPENAI
# ===========================================
# Chave da API OpenAI (obrigatória para usar IA)
# Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Modelo da OpenAI (opcional, padrão: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# ===========================================
# CONFIGURAÇÕES DE EMAIL (opcional)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_de_app

# ===========================================
# CONFIGURAÇÕES DE UPLOAD (opcional)
# ===========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ===========================================
# CONFIGURAÇÕES DE LOG (opcional)
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log