.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(135deg, var(--primary-green) 0%, #005a2e 100%);
  padding: 20px;
}

.login-card {
  background: var(--white);
  border-radius: 12px;
  box-shadow: 0 8px 32px rgba(0, 114, 62, 0.2);
  padding: 40px;
  width: 100%;
  max-width: 400px;
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.login-header {
  text-align: center;
  margin-bottom: 30px;
}

.login-header h1 {
  color: var(--primary-green);
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 8px;
}

.login-header p {
  color: var(--gray);
  font-size: 16px;
}

.login-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-group label {
  color: var(--dark-gray);
  font-weight: 600;
  font-size: 14px;
  text-align: left;
}

.form-group input[type="email"],
.form-group input[type="password"] {
  padding: 12px 16px;
  border: 2px solid #e0e0e0;
  border-radius: 8px;
  font-size: 16px;
  transition: all 0.3s ease;
  background: var(--white);
}

.form-group input[type="email"]:focus,
.form-group input[type="password"]:focus {
  border-color: var(--primary-green);
  box-shadow: 0 0 0 3px rgba(0, 114, 62, 0.1);
}

.form-group input::placeholder {
  color: var(--gray);
}

.checkbox-group {
  flex-direction: row;
  align-items: center;
  gap: 12px;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  font-size: 14px;
  color: var(--dark-gray);
  user-select: none;
}

.checkbox-label input[type="checkbox"] {
  width: 18px;
  height: 18px;
  accent-color: var(--primary-green);
  cursor: pointer;
}

.login-button {
  background: var(--primary-green);
  color: var(--white);
  padding: 14px 24px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  transition: all 0.3s ease;
  margin-top: 10px;
}

.login-button:hover:not(:disabled) {
  background: #005a2e;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(0, 114, 62, 0.3);
}

.login-button:disabled {
  background: var(--gray);
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

.error-message {
  background: #ffebee;
  color: var(--error-red);
  padding: 12px 16px;
  border-radius: 8px;
  border-left: 4px solid var(--error-red);
  font-size: 14px;
  text-align: left;
}

.login-footer {
  margin-top: 20px;
  text-align: center;
}

.login-footer p {
  color: var(--gray);
  font-size: 14px;
}

.login-footer a {
  color: var(--primary-green);
  font-weight: 600;
  transition: color 0.3s ease;
}

.login-footer a:hover {
  color: #005a2e;
}

/* Responsividade */
@media (max-width: 480px) {
  .login-card {
    padding: 30px 20px;
    margin: 10px;
  }
  
  .login-header h1 {
    font-size: 24px;
  }
  
  .form-group input[type="email"],
  .form-group input[type="password"] {
    font-size: 14px;
    padding: 10px 14px;
  }
}

/* Telas grandes (ultrawide) */
@media (min-width: 1920px) {
  .login-card {
    max-width: 500px;
    padding: 50px;
  }
  
  .login-header h1 {
    font-size: 32px;
  }
  
  .login-header p {
    font-size: 18px;
  }
  
  .form-group input[type="email"],
  .form-group input[type="password"] {
    font-size: 18px;
    padding: 16px 20px;
  }
  
  .login-button {
    padding: 18px 32px;
    font-size: 18px;
  }
}

/* Telas m√©dias (notebooks) */
@media (max-width: 1366px) {
  .login-card {
    max-width: 380px;
    padding: 35px;
  }
  
  .login-header h1 {
    font-size: 26px;
  }
  
  .form-group input[type="email"],
  .form-group input[type="password"] {
    font-size: 15px;
    padding: 12px 16px;
  }
}

/* Telas pequenas (tablets) */
@media (max-width: 1024px) {
  .login-card {
    max-width: 400px;
    margin: 20px;
  }
} 