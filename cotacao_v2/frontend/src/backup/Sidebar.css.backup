.sidebar {
  position: fixed;
  left: 0;
  top: 0;
  height: 100vh;
  background: var(--white);
  box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  border-right: 1px solid #e0e0e0;
}

.sidebar.expanded {
  width: 250px;
}

.sidebar.collapsed {
  width: 60px;
  border-right: none;
  box-shadow: 1px 0 4px rgba(0, 0, 0, 0.1);
}

.sidebar.collapsed .sidebar-header {
  padding: 20px 10px;
  justify-content: center;
}

.sidebar-header {
  padding: 20px;
  border-bottom: 1px solid #e0e0e0;
  display: flex;
  align-items: center;
  gap: 12px;
  min-height: 60px;
}

.toggle-button {
  background: var(--primary-green);
  color: var(--white);
  border: none;
  border-radius: 6px;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  font-size: 12px;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.toggle-button:hover {
  background: #005a2e;
  transform: scale(1.05);
}

.sidebar-title {
  color: var(--primary-green);
  font-size: 18px;
  font-weight: 600;
  margin: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sidebar-nav {
  flex: 1;
  padding: 20px 0;
}

.menu-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.menu-list li {
  margin: 0;
}

.menu-item {
  width: 100%;
  padding: 12px 20px;
  background: none;
  border: none;
  display: flex;
  align-items: center;
  gap: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: left;
  color: var(--dark-gray);
  font-size: 14px;
  font-weight: 500;
}

.menu-item:hover {
  background: rgba(0, 114, 62, 0.1);
  color: var(--primary-green);
}

.menu-item:hover .menu-icon {
  color: var(--primary-green);
}

.menu-item.active {
  background: var(--primary-green);
  color: var(--white);
}

.menu-item.active .menu-icon {
  color: var(--white);
}

.menu-icon {
  font-size: 16px;
  flex-shrink: 0;
  width: 20px;
  text-align: center;
  color: var(--dark-gray);
  font-weight: bold;
  text-transform: uppercase;
}

.menu-label {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Responsividade */
@media (max-width: 768px) {
  .sidebar.expanded {
    width: 200px;
  }
  
  .sidebar.collapsed {
    width: 50px;
    border-right: none;
    box-shadow: 1px 0 4px rgba(0, 0, 0, 0.1);
  }
  
  .sidebar.collapsed .sidebar-header {
    padding: 15px 8px;
    justify-content: center;
  }
  
  .sidebar-header {
    padding: 15px;
  }
  
  .menu-item,
  .logout-menu-item {
    padding: 10px 15px;
    font-size: 13px;
  }
  
  .sidebar-footer {
    padding: 15px 0;
  }
}

/* Telas grandes (ultrawide) */
@media (min-width: 1920px) {
  .sidebar.expanded {
    width: 280px;
  }
  
  .sidebar.collapsed {
    width: 70px;
    border-right: none;
    box-shadow: 1px 0 4px rgba(0, 0, 0, 0.1);
  }
  
  .sidebar-title {
    font-size: 20px;
  }
  
  .menu-item,
  .logout-menu-item {
    padding: 15px 25px;
    font-size: 16px;
  }
  
  .menu-icon {
    font-size: 18px;
    width: 24px;
  }
  
  .sidebar-footer {
    padding: 25px 0;
  }
}

/* Telas médias (notebooks) */
@media (max-width: 1366px) {
  .sidebar.expanded {
    width: 220px;
  }
  
  .sidebar.collapsed {
    width: 55px;
    border-right: none;
    box-shadow: 1px 0 4px rgba(0, 0, 0, 0.1);
  }
  
  .menu-item,
  .logout-menu-item {
    padding: 12px 18px;
    font-size: 13px;
  }
}

/* Telas pequenas (tablets) */
@media (max-width: 1024px) {
  .sidebar.expanded {
    width: 200px;
  }
  
  .sidebar.collapsed {
    width: 50px;
    border-right: none;
    box-shadow: 1px 0 4px rgba(0, 0, 0, 0.1);
  }
}

/* Botão de Sair na parte inferior */
.sidebar-footer {
  margin-top: auto;
  padding: 20px 0;
  border-top: 1px solid #e0e0e0;
}

.logout-menu-item {
  width: 100%;
  padding: 12px 20px;
  background: none;
  border: none;
  display: flex;
  align-items: center;
  gap: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: left;
  color: #f44336;
  font-size: 14px;
  font-weight: 500;
}

.logout-menu-item:hover {
  background: rgba(244, 67, 54, 0.1);
  color: #d32f2f;
}

.logout-menu-item:hover .menu-icon {
  color: #d32f2f;
}

/* Tooltip para sidebar recolhida */
.sidebar.collapsed .menu-item,
.sidebar.collapsed .logout-menu-item {
  position: relative;
}

.sidebar.collapsed .menu-item:hover::after,
.sidebar.collapsed .logout-menu-item:hover::after {
  content: attr(title);
  position: absolute;
  left: 100%;
  top: 50%;
  transform: translateY(-50%);
  background: var(--dark-gray);
  color: var(--white);
  padding: 6px 10px;
  border-radius: 4px;
  font-size: 12px;
  white-space: nowrap;
  z-index: 1001;
  margin-left: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
} 